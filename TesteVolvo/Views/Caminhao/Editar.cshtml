@model TesteVolvo.Models.Caminhao

@{
    ViewData["Title"] = "Editar Caminhão";
}

<div class="text-center">
    <h1 class="display-4">Editar Caminhão</h1>
    
    @*<p>
        <a class="btn btn-primary " asp-action="Create">Novo</a>
    </p>*@
    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="IdCaminhao" type="hidden" />
        <input asp-for="AnoFabricacao" type="hidden" />

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AnoModelo" class="control-label"></label>
            <select asp-for="AnoModelo" class ="form-control" asp-items="ViewBag.AnoModelo"></select>
            <span asp-validation-for="AnoModelo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdModelo" class="control-label"></label>
            <select asp-for="IdModelo" class ="form-control" asp-items="ViewBag.IdModelo"></select>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </form>

    <br />

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>